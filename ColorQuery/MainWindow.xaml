<Window x:Class="ColorQuery.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColorQuery" xmlns:p="clr-namespace:ColorQuery.Properties"
        mc:Ignorable="d"
        Title="Color Query" Width="800" Height="600" ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        <ResourceDictionary>
            <ContextMenu x:Key="ctxmColorCopy">
                <MenuItem Header="{p:Resx CopyColor}" Command="Copy">
                    <MenuItem.Icon>
                        <Rectangle>
                            <Rectangle.Fill>
                                <SolidColorBrush Color="{Binding CurrentColor}" />
                            </Rectangle.Fill>
                        </Rectangle>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="{p:Resx CopyColorAs}">
                    <MenuItem Header="RGB"  Command="Copy" CommandParameter="{x:Static local:ColorFormat.RGB}"  InputGestureText=" "/>
                    <MenuItem Header="CMYK" Command="Copy" CommandParameter="{x:Static local:ColorFormat.CMYK}" InputGestureText=" "/>
                    <MenuItem Header="Hex"  Command="Copy" CommandParameter="{x:Static local:ColorFormat.HEX}"  InputGestureText=" "/>
                </MenuItem>
            </ContextMenu>

            <local:ColorQueryModel x:Key="mockModel">
                <local:ColorQueryModel.History>
                    <Color>Red</Color>
                    <Color>Green</Color>
                    <Color>Blue</Color>
                    <Color>Cyan</Color>
                    <Color>Magenta</Color>
                    <Color>Yellow</Color>
                    <Color>Red</Color>
                    <Color>Green</Color>
                    <Color>Blue</Color>
                    <Color>Cyan</Color>
                </local:ColorQueryModel.History>
                <local:ColorQueryModel.Footer>Status...</local:ColorQueryModel.Footer>
            </local:ColorQueryModel>
        </ResourceDictionary>
    </Window.Resources>

    <Window.DataContext>
        <local:ColorQueryModel x:Name="model" />
    </Window.DataContext>

    <Window.CommandBindings>
        <CommandBinding Command="Refresh" Executed="RefreshCmd_Executed"/>
        <CommandBinding Command="IncreaseZoom" Executed="ZoomCmd_Exec" CanExecute="ZoomCmd_CanExec" />
        <CommandBinding Command="DecreaseZoom" Executed="ZoomCmd_Exec" CanExecute="ZoomCmd_CanExec" />
        <CommandBinding Command="Close" Executed="CloseCmd_Exec" />
        <CommandBinding Command="Copy" Executed="CopyCmd_Exec" CanExecute="CopyCmd_CanExec" />
    </Window.CommandBindings>


    <Grid d:DataContext="{StaticResource mockModel}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>

        <ToolBarTray Name="tooltray">
            <ToolBarTray.Resources>
                <Style x:Key="btn" TargetType="ButtonBase">
                    <Setter Property="Margin" Value="5,0"/>
                    <Setter Property="FontFamily" Value="Segoe UI Symbol"/>
                    <Setter Property="FontSize" Value="15"/>
                </Style>
                <Style x:Key="{x:Static ToolBar.ButtonStyleKey}" BasedOn="{StaticResource btn}" TargetType="Button"/>
            </ToolBarTray.Resources>
            
            <ToolBar>
                <Button Name="btnRefresh" Command="Refresh">&#xE117;</Button>
                <Button Command="Copy">&#xE16f;</Button>
                <ToggleButton x:Name="histShow" ToolTip="{p:Resx Key='Recent colors'}" Style="{StaticResource btn}"
                              IsEnabled="{Binding HasItems, ElementName=histList}"
                              IsChecked="{Binding IsOpen, ElementName=histPopup,Mode=TwoWay}">&#x1f553;</ToggleButton>
                <Button Click="miAbout_Click" ToolTip="{p:Resx About}">&#xe10c;</Button>
                <Separator/>
                <Button Command="IncreaseZoom">&#xE12E;</Button>
                <Button Command="DecreaseZoom">&#xE1A4;</Button>
                <Button x:Name="miGoHome" Click="miGoHome_Click">&#xE1E4;</Button>
            </ToolBar>
        </ToolBarTray>

        <ScrollViewer Name="scrollview" Margin="5" Grid.Row="1" HorizontalScrollBarVisibility="Visible" PanningMode="Both">
            <Image x:Name="preview" Stretch="Fill" Cursor="Cross"
                   MouseMove="preview_MouseMove" MouseLeave="preview_MouseMove"
                   MouseRightButtonUp="preview_MouseBtnClick" MouseLeftButtonDown="preview_MouseBtnClick"
                   ContextMenu="{StaticResource ctxmColorCopy}">
                <Image.RenderTransform>
                    <ScaleTransform ScaleX="{Binding Zoom}" ScaleY="{Binding Zoom}" 
                                    CenterX="{Binding HorizontalOffset,ElementName=scrollview}"
                                    CenterY="{Binding VerticalOffset,ElementName=scrollview}"/>
                </Image.RenderTransform>
            </Image>
        </ScrollViewer>

        <Popup Name="histPopup" StaysOpen="False" AllowsTransparency="True" PlacementTarget="{Binding ElementName=histShow}">
            <StackPanel Background="White" Margin="3">
                <ListView Name="histList" ItemsSource="{Binding History}" SelectionMode="Single" SelectionChanged="histList_SelectionChanged" BorderBrush="{x:Null}">
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel MaxWidth="150" MaxHeight="120"/>
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Rectangle Stroke="Black" Width="20" Height="20">
                                <Rectangle.Fill>
                                    <SolidColorBrush Color="{Binding}" />
                                </Rectangle.Fill>
                            </Rectangle>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <Button Click="histClear_Click" Content="{p:Resx Clear}"></Button>
            </StackPanel>
        </Popup>

        <StackPanel Margin="5" Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" >
            <GroupBox Header="{p:Resx Color}" Padding="3" MinWidth="250">
                <StackPanel Orientation="Horizontal">
                    <Rectangle Name="previewColor" Stroke="Black" Height="85" Width="85" ContextMenu="{StaticResource ctxmColorCopy}" VerticalAlignment="Top">
                        <Rectangle.Fill>
                            <SolidColorBrush Color="{Binding CurrentColor}" />
                        </Rectangle.Fill>
                    </Rectangle>
                    <TextBlock Name="previewText" Margin="5,0" Text="{Binding UiText,FallbackValue=None}" MinWidth="95" FontFamily="Consolas, DejaVu Sans Mono" />
                </StackPanel>
            </GroupBox>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <GroupBox Header="{p:Resx Format}" VerticalAlignment="Top" VerticalContentAlignment="Center" Padding="5">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Stretch" 
                                RadioButton.Checked="onColorFmtChanged">
                        <StackPanel.Resources>
                            <Style TargetType="RadioButton">
                                <Setter Property="Margin" Value="3,0"/>
                            </Style>
                        </StackPanel.Resources>
                        <RadioButton IsChecked="True" Content="RGB" Tag="{x:Static local:ColorFormat.RGB}"/>
                        <RadioButton Content="CMYK" Tag="{x:Static local:ColorFormat.CMYK}"/>
                        <RadioButton Content="Hex" Tag="{x:Static local:ColorFormat.HEX}"/>
                    </StackPanel>
                </GroupBox>
                <GroupBox Name="gbZoom" Grid.Row="1" Padding="5" VerticalAlignment="Bottom">
                    <StackPanel>
                        <Slider x:Name="zoomSlider" Value="{Binding Zoom,Mode=TwoWay}" Minimum="1" Maximum="10" LargeChange="0.5" />
                        <TextBlock Text="{Binding Value, ElementName=zoomSlider, StringFormat=x\{0:f2\}}" HorizontalAlignment="Right" />
                    </StackPanel>
                </GroupBox>
            </Grid>

            <Button Command="Refresh" Content="{Binding Command.Text, RelativeSource={RelativeSource Self}}"
                    VerticalAlignment="Bottom" MinWidth="80" Margin="5,0,0,0"/>
        </StackPanel>


        <StatusBar Grid.Row="3">
            <StatusBarItem>
                <TextBlock Name="statusTxt" Text="{Binding Footer}" FontSize="11"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
